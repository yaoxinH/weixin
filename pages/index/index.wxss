
page {
  background-color: #F0F0F0;
}

swiper {
  height: 320rpx;
}

swiper image {
  width: 750rpx;
  height: 320rpx;
}

.title {
  line-height: 1;
  color: #3C3C3C;
  font-size: 28rpx;
  font-weight: 500;
  padding: 20rpx 30rpx;
}

.item {
  margin-bottom: 20rpx;
}

.item image {
  width: 750rpx;
  height: 320rpx;
}

.item .info {
  height: 180rpx;
  padding: 16rpx 130rpx 16rpx 30rpx;
  position: relative;
  background-color: #fff;
  box-sizing: border-box;
}

.item .info .name {
  font-size: 30rpx;
  color: #3C3C3C;
}

.item .info .extra {
  font-size: 22rpx;
  color: #B4B4B4;
  position: absolute;
  bottom: 20rpx;
}


.item .info .status {
  font-size: 30rpx;
  color: #FE6249;
  position: absolute;
  right: 30rpx;
  top: 16rpx;
}
